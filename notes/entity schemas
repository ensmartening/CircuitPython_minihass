All entities:

MQTT_ENTITY_COMMON_SCHEMA=
	MQTT_AVAILABILITY_SCHEMA =
		MQTT_AVAILABILITY_LIST_SCHEMA =
			CONF_AVAILABILITY_MODE
			x CONF_AVAILABILITY -> list
				* CONF_TOPIC
				CONF_PAYLOAD_AVAILABLE
				CONF_PAYLOAD_NOT_AVAILABLE
				CONF_VALUE_TEMPLATE

		MQTT_AVAILABILITY_SINGLE_SCHEMA =
			x CONF_AVAILABILITY_TOPIC
			CONF_AVAILABILITY_TEMPLATE
			CONF_PAYLOAD_AVAILABLE
			CONF_PAYLOAD_NOT_AVAILABLE

	MQTT_ENTITY_DEVICE_INFO_SCHEMA =
		CONF_IDENTIFIERS
		CONF_CONNECTIONS
		CONF_MANUFACTURER
		CONF_MODEL
		CONF_NAME
		CONF_HW_VERSION
		CONF_SERIAL_NUMBER
		CONF_SW_VERSION
		CONF_VIA_DEVICE
		CONF_SUGGESTED_AREA
		CONF_CONFIGURATION_URL
	MQTT_ORIGIN_INFO_SCHEMA =
		*CONF_NAME
		CONF_SW_VERSION
		CONF_SUPPORT_URL
	CONF_ENABLED_BY_DEFAULT
	ENTITY_CATEGORY
	ICON
	JSON_ATTRS_TOPIC
	JSON_ATTRS_TEMPLATE
	OBJECT_ID
	UNIQUE_ID

Read-only entities (sensors):

Extends MQTT_BASE_SCHEMA
MQTT_RO_SCHEMA =
	* CONF_STATE_TOPIC
	CONF_VALUE_TEMPLATE

Read-write entites (switches, etc):

Extends MQTT_BASE_SCHEMA
MQTT_RW_SCHEMA =
	* CONF_COMMAND_TOPIC
	CONF_OPTIMISTIC
	CONF_RETAIN
	CONF_STATE_TOPIC

MQTT_BASE_SCHEMA =
    CONF_QOS
    CONF_ENCODING
